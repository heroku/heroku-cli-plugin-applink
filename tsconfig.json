{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDirs": ["src"],
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*"]
}
