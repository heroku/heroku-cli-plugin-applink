{
  "name": "@heroku-cli/plugin-integration",
  "description": "Heroku CLI plugin for Heroku Integration add-on",
  "version": "0.0.9",
  "author": "Heroku",
  "bugs": "https://github.com/heroku/heroku-cli-plugin-integration/issues",
  "dependencies": {
    "@heroku-cli/color": "^2",
    "@heroku-cli/command": "^11",
    "@heroku-cli/schema": "^1.0.25",
    "@heroku/generator-heroku-integration": "^0.0.9",
    "@oclif/core": "^2.16.0",
    "@oclif/plugin-help": "^5",
    "open": "^8.4.2",
    "tsheredoc": "^1",
    "yeoman-environment": "^2"
  },
  "devDependencies": {
    "@oclif/test": "^2.3.28",
    "@types/mocha": "^10",
    "@types/nock": "^11",
    "@types/node": "^16",
    "@types/sinon": "^17",
    "@types/yeoman-environment": "^2.10",
    "@typescript-eslint/eslint-plugin": "^6",
    "@typescript-eslint/parser": "^6",
    "chai": "^4",
    "eslint": "^7",
    "eslint-config-oclif": "^4",
    "eslint-config-oclif-typescript": "^1",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-mocha": "^10",
    "http-call": "^5",
    "mocha": "^10",
    "netrc-parser": "^3",
    "nock": "^13",
    "nyc": "^15",
    "oclif": "2.2.0",
    "sinon": "^14",
    "stdout-stderr": "^0",
    "strip-ansi": "^6",
    "ts-node": "^10",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.20.2"
  },
  "files": [
    "/dist"
  ],
  "homepage": "https://github.com/heroku/heroku-cli-plugin-integration",
  "keywords": [
    "heroku-plugin",
    "oclif"
  ],
  "license": "ISC",
  "oclif": {
    "bin": "heroku",
    "commands": "./dist/commands",
    "devPlugins": [
      "@oclif/plugin-help"
    ],
    "topics": {
      "datacloud": {
        "description": "manage Heroku app connections to a Data Cloud Org"
      },
      "integration": {
        "description": "access information and generate Heroku Integration projects"
      },
      "salesforce": {
        "description": "manage Heroku app connections to a Salesforce Org"
      }
    }
  },
  "repository": "heroku/heroku-cli-plugin-integration",
  "scripts": {
    "prepare": "yarn build",
    "build": "rm -rf dist && tsc -b && oclif manifest && oclif readme && mv oclif.manifest.json ./dist/oclif.manifest.json && cp README.md ./dist/README.md",
    "lint": "eslint . --ext .ts --config .eslintrc.json",
    "posttest": "yarn lint",
    "test": "nyc mocha --forbid-only",
    "version": "oclif readme && git add README.md"
  }
}
